---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getImage } from 'astro:assets';
import localBioPhoto from '../images/portrait-danielle-2022.jpg';
import scraperPortImg from '../images/mercari-scraper-email-screenshot.png';
import shiftsGif from '../images/shifts-resized.gif';
import FixedSocialsBox from '../components/FixedSocialsBox.astro';
import backgroundImage from '../images/md-geometric-bg.jpg';
import PortfolioItem from '../components/PortfolioItem.astro';
import SocialIcon from '../components/SocialIcon.astro';
const optimizedBgImage = await getImage({ src: backgroundImage });
const opttimizedScraperPortImg = await getImage({ src: scraperPortImg });
---

<Layout title="Crockett Ford">
  <FixedSocialsBox />

  <div
    class="md:container md:mx-auto grid
    [grid-template-rows:repeat(auto-fill,auto)]
    [grid-template-areas:'head''para''image']
    
    place-items-start
    items-center
    px-4
    mb-16
    gap-2
    md:px-28
    md:py-10
    md:mt-8
    md:h-min
    md:[grid-template-areas:'head_image''para_image']
    md:[grid-template-columns:2fr_1.5fr]
    md:[grid-template-rows:1fr_2fr]
    lg:my-24
    lg:mb-60"
  >
    <h1
      data-aos="fade-right"
      class="font-slab text-3xl md:place-self-auto self-start lg:self-end md:text-6xl font-bold [grid-area:head]"
    >
      Crockett Ford
    </h1>

    <div
      data-aos="fade-left"
      class="mask mask-parallelogram-3 w-1/2 md:w-9/12 mx-auto [grid-area:image]"
    >
      <Image src={localBioPhoto} alt="A portrait of Crockett" class="" />
    </div>

    <div class="[grid-area:para] my-auto flex flex-col gap-8 pr-8 text-lg">
      <p data-aos="fade-in" class="font-sans">
        I'm a <strong>developer</strong> making apps, tools, websites and more <strong
          >end-to-end</strong
        >. If you're here to see what I can do, take a look at some of my <a
          class="text-primary font-semibold hover:underline"
          href="#work">work</a
        > below.
      </p>

      <p data-aos="fade-in" class="font-sans">
        This website is equal parts professional and personal. I was recently
        inspired by <a
          class="text-primary font-semibold hover:underline"
          href="https://www.youtube.com/watch?v=_x6SCSz7g5I"
          target="_blank"
          rel="noopener noreferrer">this video</a
        > to reconsider the potential of a personal website. So, to mix a bit of the old internet into the new, here you
        can find my <a
          class="text-primary font-semibold hover:underline"
          href="/blog/">blog</a
        >, where I write about movies, books, and anything else that has my
        attention.
      </p>
    </div>
  </div>
  <div id="work" class="p-4 min-h-72 bg-base-300 w-full mx-auto px-4">
    <div class="container mx-auto my-0 p-2 md:p-4 md:w-8/12 md:px-24 w-full">
      <h2 class="font-sans font-bold text-2xl sm:text-4xl">
        Selected Projects
      </h2>
    </div>
    <ul>
      <PortfolioItem
        projectTitle="Price alert bot"
        projectDescription="A simple .net app that performs keyword searches on mercari and sends hourly email alerts for listings within a specified price range. Built to save resellers time sourcing new listings."
        tagList={['.Net', 'Playwright', 'Docker']}
        iconLinks={[
          {
            link: 'https://github.com/frockett/product-scraper',
            icon: 'bi:github',
          },
        ]}
        imageSrc={scraperPortImg}
        imageLink="https://github.com/frockett/product-scraper"
        imageAlt="a screenshot of an email containing a list full of flagged listings"
      />
      <PortfolioItem
        projectTitle="Shift-Logger API"
        projectDescription="A basic ASP.net Core Web API and a console app that consumes it. Log shifts and track employees."
        tagList={['.Net', 'Asp.Net Core', 'Web API', 'Swagger']}
        iconLinks={[
          {
            link: 'https://github.com/frockett/Console-ShiftTracker',
            icon: 'bi:github',
          },
        ]}
        imageSrc={shiftsGif}
        imageLink="https://github.com/frockett/Console-ShiftTracker"
        imageAlt="A gif showing the operation of the shift tracker console app."
      />
    </ul>
  </div>

  <!-- <div class="h-lvh w-screen">
      <div
        style={`background-image: url('${optimizedBgImage.src}')`}
        class="bg-no-repeat bg-cover bg-fixed h-full"
      >
      </div>
    </div> -->
</Layout>

